@model ProjetoMVC.Models.Usuarios

@{
    ViewData["title"] = "Criar Novo Usuário";
}

<h1> Criar Novo Usuário</h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label">Repita a senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>

<div>
    <a asp-action="Index">Voltar</a>
</div>